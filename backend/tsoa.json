{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/api/controllers/**/*.ts"],
  "spec": {
    "outputDirectory": "src/api/generated",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "routes": {
    "routesDir": "src/api/generated",
    "authenticationModule": "src/middlewares/authentication.ts"
  }
}
